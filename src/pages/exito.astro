---
import Layout from '../layouts/Layout.astro';
import { userTracker } from '../utils/userTracker';

// En un script en el lado del cliente
document.addEventListener('DOMContentLoaded', () => {
    if (getCookie('proPayed') === 'true') {
        userTracker.updateProStatus(true);
    }
});
---

<Layout title="¡Pago Completado! - ProgressoDev Pro">
    <div class="flex flex-col items-center justify-center min-h-[70vh] text-center p-6">
